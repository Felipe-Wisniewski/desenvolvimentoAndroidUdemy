<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="checkbox.cursoandroid.com.checkbox.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Quais animais de estimação você tem?"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBoxPeixeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Peixe"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textViewMostrarId"
        android:layout_toStartOf="@+id/textViewMostrarId" />

    <CheckBox
        android:id="@+id/checkBoxCaoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxPeixeId"
        android:layout_alignStart="@+id/checkBoxPeixeId"
        android:layout_below="@+id/checkBoxPeixeId"
        android:text="Cão" />

    <CheckBox
        android:id="@+id/checkBoxGatoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxCaoId"
        android:layout_alignStart="@+id/checkBoxCaoId"
        android:layout_below="@+id/checkBoxCaoId"
        android:text="Gato" />

    <CheckBox
        android:id="@+id/checkBoxPapagaioId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxGatoId"
        android:layout_alignStart="@+id/checkBoxGatoId"
        android:layout_below="@+id/checkBoxGatoId"
        android:text="Papagaio" />

    <CheckBox
        android:id="@+id/checkBoxHamsterId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxPapagaioId"
        android:layout_alignStart="@+id/checkBoxPapagaioId"
        android:layout_below="@+id/checkBoxPapagaioId"
        android:text="Hamster" />

    <TextView
        android:id="@+id/textViewMostrarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar.."
        android:layout_marginTop="24dp"
        android:layout_below="@+id/botaoMostrarId"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/botaoMostrarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxHamsterId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Mostrar" />
</RelativeLayout>
